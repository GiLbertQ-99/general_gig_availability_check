name: general_gig_availability_check 

on:
  repository_dispatch:
    types: [craigslist_alert]

jobs:
  autoresponder:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout your repository
      - uses: actions/checkout@v3
      
      # Step 2: Debug directory structure
      - name: Debug directory structure
        run: ls -R

      # Step 3: Set up Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      # Step 4: Upgrade pip
      - name: Upgrade pip
        run: python -m pip install --upgrade pip

      # Step 5: Install dependencies
      - name: Install dependencies
        run: pip install -r requirements.txt

      # Step 6: Create credentials.json dynamically from GitHub Secrets
      - name: Set up credentials.json
        run: echo "${{ secrets.CREDENTIALS_JSON }}" > credentials.json

      # Step 7: Set environment variables from GitHub Secrets
      - name: Set environment variables
        run: |
          echo "SENDER_EMAIL=${{ secrets.SENDER_EMAIL }}" >> $GITHUB_ENV
          echo "EMAIL_PASSWORD=${{ secrets.EMAIL_PASSWORD }}" >> $GITHUB_ENV

      # Step 8: Run the auto-responder script
      - name: Run auto-responder
        run: python general_gig_gvailability_check.py
